@{
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Course Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].CourseName</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { courseId=Model[i].Id }) |
                    @Html.ActionLink("Add", "Add", new { userId=5, courseId=Model[i].Id })
                </td>

            </tr>
        }

    </tbody>
</table>
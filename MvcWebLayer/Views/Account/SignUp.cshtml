@model EntityLayer.DTOs.AccountDtos.RegisterDto
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                @* <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image"> *@
                <img src="~/signup.png"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form method="post" action="@Url.Action("SignUp", "Account")">
                    <!-- Name input -->
                    <div class="form-outline mb-4">
                        <input type="text" id="form1Example13" asp-for="Name" class="form-control form-control-lg" />
                        <label class="form-label" for="form1Example13">Name</label>
                    </div>
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="email" id="form1Example13" asp-for="Email" class="form-control form-control-lg" />
                        <label class="form-label" for="form1Example13">Email address</label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input type="password" id="form1Example23" asp-for="Password" class="form-control form-control-lg" />
                        <label class="form-label" for="form1Example23">Password</label>
                    </div>

                    <div style="margin: auto; width: 50%;">
                        <label for="UniversityId">Select University</label>
                        <select id="UniversityId" name="UniversityId" class="form-control">
                            <option value="">-- Select --</option>
                                @for (int i = 0; i < ViewBag.Universities.Count; i++)
                                {
                                <option value="@ViewBag.Universities[i].Id">@ViewBag.Universities[i].Name</option>
                                }
                        </select>
                    </div>

                    <div style="display:flex; justify-content:center; gap:10%; padding-bottom:1rem ">
                        <!-- Default radio -->
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="Teacher" name="UserType" asp-for="UserType" value="Teacher" />
                            <label class="form-check-label" for="Teacher">Teacher</label>
                        </div>

                        <!-- Default checked radio -->
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="Student" name="UserType" asp-for="UserType" value="Student" checked />
                            <label class="form-check-label" for="Student">Student</label>
                        </div>
                    </div>

                    
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign up</button>

                </form>
            </div>
        </div>
    </div>
</section>
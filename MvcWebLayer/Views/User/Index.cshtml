@using EntityLayer.Enums;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Status</th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Name</td>
            <td>@Model.Email</td>
            <td>@Model.UserType</td>
        </tr>

    </tbody>
</table>
@if (Model.UserType == UserTypeEnum.Student)
{
    <div>
        @Html.ActionLink("Courses", "StudentCourses", new {studentId=Model.Id})
    </div>
}
@if (Model.UserType == UserTypeEnum.Teacher)
{
<div>
    @Html.ActionLink("Courses", "TeacherCourses", new {teacherId=Model.Id})
</div>
}


@{
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Course Name</th>
            <th scope="col">Students</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.teacherCourses.Count; i++)
        {
            <tr>
                <th scope="row">@Model.teacherCourses[i].Course.Id</th>
                <td>@Model.teacherCourses[i].Course.CourseName</td>
                <td>@Html.ActionLink("View", "TeacherCourseStudents", "User", new {teacherId=Model.teacherId, courseId=Model.teacherCourses[i].Course.Id})</td>
            </tr>
        }

    </tbody>
</table>
<div>
    @Html.ActionLink("Add New Course", "NewCourseForm", "Course", new {teacherId=Model.teacherId})
</div>